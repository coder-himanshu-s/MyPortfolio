{
  "name": "portfolio-fullstack",
  "version": "1.0.0",
  "description": "Full-stack portfolio with email functionality",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd .. && npm run dev",
    "dev:backend": "npm run dev",
    "start": "npm run start:backend",
    "start:backend": "npm start",
    "build": "cd .. && npm run build",
    "install:all": "npm install && cd .. && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
